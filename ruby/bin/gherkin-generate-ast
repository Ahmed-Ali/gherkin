#!/usr/bin/env ruby
$LOAD_PATH.unshift(File.join(File.dirname(__FILE__),"../lib"))
require 'gherkin/parser'
require 'gherkin/token_scanner'
require 'gherkin/token_matcher'
require 'gherkin/ast_builder'
require 'json'

parser = Gherkin::Parser.new
parser.stop_at_first_error = false
files = ARGV + (STDIN.tty? ? [] : [STDIN])
files.each do |file|
  scanner = Gherkin::TokenScanner.new(file)
  builder = Gherkin::AstBuilder.new
  begin
    puts JSON.generate(parser.parse(scanner, builder, Gherkin::TokenMatcher.new))
  rescue Gherkin::ParserError => e
    STDERR.puts e.message
    exit 1
  end
end
